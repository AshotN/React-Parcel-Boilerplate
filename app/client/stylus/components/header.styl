header
	width: 100%
	height: 150px
	background-color: #0b0b0b
	color: white
	display: flex
	align-items: center
	justify-content: space-around
	.title
		outline none
		text-decoration none
		font-size: calc(16px + 2.5vw);
		font-family: Karla
		font-weight: 300
		color: #ffab00;
		margin-left: 5%;

	.navContainer
		font-family: Open Sans, sans-serif
		font-size: 18px
		height: 100%
		display: flex
		align-items: center
		width: 700px
		justify-content: right
		nav
			list-style: none
			display: flex
			font-size: 24px
			white-space: nowrap
			a
				margin: 0 10px
				color: #dcdcdc
				text-decoration: none
				border-bottom: 1px solid #afafaf
				transition: 0.2s padding, color
				outline: none
				&:hover, &.active
					padding: 0 5px
					color: #0365a8
					border-bottom: 1px solid #0365a8
